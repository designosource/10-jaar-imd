doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/flatlab/css/bootstrap.min.css', type="text/css")
        link(rel='stylesheet', href='/flatlab/css/bootstrap-reset.css', type="text/css")
        //external css
        link(rel="stylesheet", href="/flatlab/assets/font-awesome/css/font-awesome.css", type="text/css")
        //internal css
        link(rel="stylesheet", href="/flatlab/css/style.css", type="text/css")
        link(rel='stylesheet', href='/flatlab/css/style-responsive.css', type='text/css')
    
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    body
        aside
            div(id="sidebar", class="nav-collapse")
                ul(class="sidebar-menu", id="nav-accordion")
                    li
                        a(href="/admin")
                            i(class="fa fa-dashboard")
                            span="Overzicht"
                    li
                        a(href="/admin/new")
                            i(class="fa fa-plus")
                            span="Toevoegen"
                    li(class="active")
                        a(href="/admin/delete")
                            i(class="fa fa-times")
                            span="Verwijderen"
        section(id="main-content")
            section(class="wrapper")
                div(class="row")
                    div(class="col-md-12", id="posts-wrapper")
                        div(id="feedback")
                        section(class="panel")
                            header(class="panel-heading")="Posts - Nieuwste eerst"
                            table(class="table table-striped table-advance table-hover")
                                thead
                                    tr
                                        th
                                            i(class="fa fa-user")
                                            |  Naam
                                        th
                                            i(class="fa fa-calendar-o")
                                            |  Date
                                        th
                                            i(class="fa fa-file-text-o")
                                            |  Titel
                                        th
                                            i(class="fa fa-android")
                                            |  Post-ID
                                        th
                                tbody
                                    each post, p in postlist
                                        tr
                                            td=post.name
                                            td=post.date
                                            td=post.title
                                            td(class="post-id")=post._id
                                            td
                                                button(class="btn btn-danger btn-xs delete")
                                                    i(class="fa fa-trash-o ")
    script(type="text/javascript", src="/javascripts/jquery-latest.min.js")
    script(type="text/javascript", src="/javascripts/jquery-ui.min.js")
    script(type="text/javascript", src="/javascripts/admin-delete.js")